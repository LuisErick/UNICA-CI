<%= form_for @college, :html => { :class => 'form-horizontal' } do |f| %>
  
  <table class="table table-striped">
  <thead>
    <tr>
      <th><%= @faculties.human_attribute_name(:id) %></th>
      <th><%= @faculties.human_attribute_name(:name) %></th>
      <th><%= @faculties.human_attribute_name(:description) %></th>  
    </tr>
  </thead>
  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= link_to faculty.id, faculty_path(faculty), remote: true, id: faculty.id.to_s+'fac' %></td>
        <td><%= faculty.name %></td>
        <td><%= faculty.description %></td>      
      </tr>
    <% end %>
  </tbody>
</table>
  <div class="control-group">
    <%= f.label :faculty_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :faculty_id, :class => 'text_field', readonly: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                colleges_path, :class => 'btn' %>
  </div>
<% end %>
