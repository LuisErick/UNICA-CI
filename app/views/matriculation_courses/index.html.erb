<%- model_class = MatriculationCourse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:matriculation_id) %></th>
      <th><%= model_class.human_attribute_name(:package_id) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:final_grade) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @matriculation_courses.each do |matriculation_course| %>
      <tr>
        <td><%= link_to matriculation_course.id, matriculation_course_path(matriculation_course) %></td>
        <td><%= matriculation_course.matriculation_id %></td>
        <td><%= matriculation_course.package_id %></td>
        <td><%= matriculation_course.start_date %></td>
        <td><%= matriculation_course.end_date %></td>
        <td><%= matriculation_course.final_grade %></td>
        <td><%=l matriculation_course.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_matriculation_course_path(matriculation_course), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      matriculation_course_path(matriculation_course),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_matriculation_course_path,
            :class => 'btn btn-primary' %>
