<%= form_for @payment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :matricualtion_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :matricualtion_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :payment_type_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :payment_day, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receipt_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receipt_number, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payments_path, :class => 'btn' %>
  </div>
<% end %>
