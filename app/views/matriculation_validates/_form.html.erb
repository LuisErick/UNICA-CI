<%= form_for @matriculation_validate, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :matriculation_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :matriculation_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :institution, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :institution, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                matriculation_validates_path, :class => 'btn' %>
  </div>
<% end %>
