<%= form_for @grade, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :matriculation_course_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :matriculation_course_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :grade_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :grade_type_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                grades_path, :class => 'btn' %>
  </div>
<% end %>
