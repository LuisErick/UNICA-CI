<div align="center"><h1>Ingresar</h1>
<div class="error">
	<br>
	<%=@message%>
	<br><br>
</div>
<div class="form">
	<%= form_tag({controller: 'security', action: 'login'}, method: 'post') do %>
		<div class="field">
			<p><%=label_tag :username, 'Nombre de usuario'%></p>
			<p><%=text_field_tag :username %></p>
		</div>
		</br>
		<div class="field">
			<p><%=label_tag :password, 'Contraseña'%></p>
			<p><%=password_field_tag :password %></p>
		</div>
		</br>
		<div class="action">
			<p><%=submit_tag 'Ingresar'%></p>
		</div>
	<%end%>
</div>
<div class="link">
	¿No estás registrado? <%= link_to 'Matrículate' , matriculations_path %>
</div>
</div