<h1>Listing permisssions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permisssions.each do |permisssion| %>
      <tr>
        <td><%= permisssion.name %></td>
        <td><%= permisssion.description %></td>
        <td><%= link_to 'Show', permisssion %></td>
        <td><%= link_to 'Edit', edit_permisssion_path(permisssion) %></td>
        <td><%= link_to 'Destroy', permisssion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

