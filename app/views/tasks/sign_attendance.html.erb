
<% @packages.each do |p| %>
<%= form_tag(create_attendance_teacher_path, method: 'post') do %>
	<table>
		<tr>
			<th>Número de sesión</th>
			<th>Fecha de sesión</th>
			<th>Horas realizadas</th>
			<th>Estado</th>
		</tr>
		<% p.number_of_sessions.times do |t| %>	
			<tr>
				<td>
					Sessión número <%= t+1 %>
				</td>
				<td>
					<%= date_field_tag 'date_'+p.id.to_s+'_'+(t+1).to_s %>
				</td>
				<td>
					<%= number_field_tag '' %>
				</td>
				<td>
					<%= check_box_tag 'estado'+p.id.to_s+'_'+(t+1).to_s %>
				</td>
			</tr>
			<% end %>			
	</table>
	<%= submit_tag 'Listo' %>
	<% end %>
<% end %>