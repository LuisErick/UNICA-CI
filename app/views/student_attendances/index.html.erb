<%- model_class = StudentAttendance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:matriculation_course_id) %></th>
      <th><%= model_class.human_attribute_name(:attendance_date) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @student_attendances.each do |student_attendance| %>
      <tr>
        <td><%= link_to student_attendance.id, student_attendance_path(student_attendance) %></td>
        <td><%= student_attendance.matriculation_course_id %></td>
        <td><%= student_attendance.attendance_date %></td>
        <td><%= student_attendance.state %></td>
        <td><%=l student_attendance.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_attendance_path(student_attendance), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_attendance_path(student_attendance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_attendance_path,
            :class => 'btn btn-primary' %>
