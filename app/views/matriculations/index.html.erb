<%- model_class = Matriculation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:pre_matriculation_id) %></th>
      <th><%= model_class.human_attribute_name(:acceptance_day) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @matriculations.each do |matriculation| %>
      <tr>
        <td><%= link_to matriculation.id, matriculation_path(matriculation) %></td>
        <td><%= matriculation.pre_matriculation_id %></td>
        <td><%= matriculation.acceptance_day %></td>
        <td><%=l matriculation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_matriculation_path(matriculation), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      matriculation_path(matriculation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_matriculation_path,
            :class => 'btn btn-primary' %>
