<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Paternal lastname</th>
      <th>Maternal lastname</th>
      <th>Name</th>
      <th>Dni</th>
      <th>Address</th>
      <th>District</th>
      <th>Province</th>
      <th>Department</th>
      <th>Home phone</th>
      <th>Mobile phone</th>
      <th>Sex</th>
      <th>Birthday</th>
      <th>Birthplace</th>
      <th>Marital status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.user_id %></td>
        <td><%= person.paternal_lastname %></td>
        <td><%= person.maternal_lastname %></td>
        <td><%= person.name %></td>
        <td><%= person.dni %></td>
        <td><%= person.address %></td>
        <td><%= person.district %></td>
        <td><%= person.province %></td>
        <td><%= person.department %></td>
        <td><%= person.home_phone %></td>
        <td><%= person.mobile_phone %></td>
        <td><%= person.sex %></td>
        <td><%= person.birthday %></td>
        <td><%= person.birthplace %></td>
        <td><%= person.marital_status_id %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

