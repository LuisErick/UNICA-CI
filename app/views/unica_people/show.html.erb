<%- model_class = UnicaPerson -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
  <dd><%= @unica_person.person_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:college_id) %>:</strong></dt>
  <dd><%= @unica_person.college_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:semester) %>:</strong></dt>
  <dd><%= @unica_person.semester %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              unica_people_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_unica_person_path(@unica_person), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              unica_person_path(@unica_person),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
